<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="10dp"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/item_icon_tip"
        android:src="@mipmap/icn_step_4"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


    <me.grantland.widget.AutofitTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/item_title_tip"
        android:singleLine="false"
        android:layout_alignTop="@+id/item_icon_tip"
        android:layout_toRightOf="@+id/item_icon_tip"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        style="@style/TipFont" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/item_date"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/item_title_tip"
        android:layout_alignRight="@+id/item_title_tip"
        android:layout_alignEnd="@+id/item_title_tip"
        style="@style/DateFont" />


</RelativeLayout>